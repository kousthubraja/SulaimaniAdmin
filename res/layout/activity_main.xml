<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="80dp"
    tools:context="com.example.sutestadmin.MainActivity"
    android:background="@drawable/chocolatebiscuit" >

    <Button
        android:id="@+id/btnadditem"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/custombutton"
        android:textColor="#a8a8a8"
        android:layout_gravity="center"
        android:text="Add Item"
        android:onClick="add_item" />

    <Button
        android:id="@+id/btnvieworder"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/custombutton"
        android:textColor="#a8a8a8"
        android:layout_gravity="center"
        android:text="View Orders"
        android:onClick="view_orders" />

    <Button
        android:id="@+id/btnfeedback"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/custombutton"
        android:textColor="#a8a8a8"
        android:layout_gravity="center"
        android:text="View Feedbacks"
        android:onClick="view_feedback" />
    
    <Button
        android:id="@+id/btntrans"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/custombutton"
        android:textColor="#a8a8a8"
        android:layout_gravity="center"
        android:text="View Transactions"
        android:onClick="view_transactions" />
    
    <Button
        android:id="@+id/btnexit"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/custombutton"
        android:textColor="#a8a8a8"
        android:layout_gravity="center"
        android:text="Exit"
        android:onClick="exit" />
		
</LinearLayout>
